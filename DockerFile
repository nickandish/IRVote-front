# Use the Node.js image to build the React frontend
FROM node:16-alpine AS build

# Set the working directory for the frontend
WORKDIR /app

# Copy package.json and install dependencies
COPY package.json package-lock.json ./
RUN npm install

# Copy the rest of the React application code
COPY . .

# Build the React app for production
RUN npm run build

# Use an Nginx image to serve the static files
FROM nginx:alpine

# Copy the React build from the previous stage into the Nginx public folder
COPY --from=build /app/build /usr/share/nginx/html

# Expose port 80 for the frontend
EXPOSE 80

# Nginx will start automatically as the container starts